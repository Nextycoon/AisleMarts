{
  "dashboard": {
    "title": "AisleMarts API Overview",
    "tags": ["aislemarts", "api", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Requests / min",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m])) * 60",
            "legendFormat": "Requests/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            },
            "unit": "reqps",
            "decimals": 0
          }
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Response Time (p95)",
        "gridPos": {"x": 6, "y": 0, "w": 18, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "id": 3,
        "type": "timeseries",
        "title": "Error Rate (4xx/5xx)",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..\"}[5m])) by (status)",
            "legendFormat": "4xx Errors",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (status)",
            "legendFormat": "5xx Errors",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "type": "table",
        "title": "Top API Endpoints",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (path)",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "path": "Endpoint",
                "Value": "Requests/sec"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Cart Operations (5m)",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{path=~\"/api/cart.*\"}[5m])) * 300",
            "legendFormat": "Cart Ops",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 200}
              ]
            },
            "unit": "ops",
            "decimals": 0
          }
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "AI Recommendations (5m)",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{path=\"/api/recommendations\"}[5m])) * 300",
            "legendFormat": "AI Recs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 100}
              ]
            },
            "unit": "ops",
            "decimals": 0
          }
        }
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Stripe Payments (5m)",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{path=~\"/api/payments.*\"}[5m])) * 300",
            "legendFormat": "Payments",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "ops",
            "decimals": 0
          }
        }
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Orders Created (5m)",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{path=\"/api/orders/stripe/webhook\"}[5m])) * 300",
            "legendFormat": "Orders",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 25}
              ]
            },
            "unit": "ops",
            "decimals": 0
          }
        }
      }
    ]
  }
}